{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "downlevelIteration": true,
    "outDir": "./.assets/",
    "rootDir": "./Web/",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "types": [
      "@types/node",
      "@types/ws"
    ],
    "esModuleInterop": true,
    "verbatimModuleSyntax" : false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2021"
    ]
  },
  "include": [ "./Web/**/*" ],
  "exclude": [ "node_modules", "./Web/Html" ]
}

